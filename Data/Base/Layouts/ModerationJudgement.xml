<xml>
	<settings>
		<name>moderation_judgement</name>
	</settings>
	<layout>
		<element name="title_label"   					type="Label" 		box="0,0,1,0.1" HAlign="Center" VAlign="Center" ForeColor="102,102,102,255" Padding="0,0,0,0" value="#moderation_title" />	
		<element name="case_id"	   						type="Label" 		box="0.1,0.1,1,0.1" HAlign="Left" VAlign="Center" ForeColor="255,255,255,255" Padding="0,0,0,0"  UseMarkup="True" value="#moderation_case_timeframe" />	
		<element name="case_length"   					type="Label" 		box="0.1,0.15,1,0.1" HAlign="Left" VAlign="Center" ForeColor="255,255,255,255" Padding="0,0,0,0"  UseMarkup="True" value="#moderation_case_timeframe" />	
		<element name="reported_user"  					type="Label" 		box="0.1,0.20,1,0.1" HAlign="Left" VAlign="Center" ForeColor="255,255,255,255" Padding="0,0,0,0" UseMarkup="True" value="#moderation_reported_user" />	
		<element name="reported_reasons"  				type="Label" 		box="0.1,0.25,1,0.1" HAlign="Left" VAlign="Center" ForeColor="255,255,255,255" Padding="0,0,0,0" UseMarkup="True" value="#moderation_reported_for" />			
		
		<element name="description_label"  				type="Label" 		box="0.1,0.345,0.8,0.2" HAlign="Left" VAlign="Top" ForeColor="200,200,200,255" Padding="0,0,0,0" value="#moderation_judgement_description" />	

		<element name="guilty_checkbox" 				type="CheckBox" 	box="0.1,0.45,0.7,0.070" FrameColor="255,255,255,200" Value="#moderation_judgement_guilty"  />	
			
			<element name="exploit_checkbox" 			type="CheckBox" 	box="0.15,0.51,0.7,0.070" FrameColor="255,255,255,200" Value="#moderation_judgement_exploit"  	Enabled="False" />	
			<element name="cheat_checkbox" 				type="CheckBox" 	box="0.15,0.57,0.7,0.070" FrameColor="255,255,255,200" Value="#moderation_judgement_cheat"  	Enabled="False" />	
			<element name="abuse_checkbox" 				type="CheckBox" 	box="0.15,0.63,0.7,0.070" FrameColor="255,255,255,200" Value="#moderation_judgement_abuse"  	Enabled="False" />	
			<element name="grief_checkbox" 				type="CheckBox" 	box="0.15,0.69,0.7,0.070" FrameColor="255,255,255,200" Value="#moderation_judgement_grief"  	Enabled="False" />	
				
		<element name="inconclusive_checkbox" 			type="CheckBox" 	box="0.1,0.75,0.7,0.070" FrameColor="255,255,255,200" Value="#moderation_judgement_inconclusive"  />	
		<element name="innocent_checkbox" 				type="CheckBox" 	box="0.1,0.81,0.7,0.070" FrameColor="255,255,255,200" Value="#moderation_judgement_innocent"  />	
				
		<element name="begin_button" 					type="Button" 		box="0.1,0.90,0.4,0.070" FrameColor="255,255,255,200" Hotkey="GUI_Back" Value="#moderation_judgement_submit" Enabled="False" />	
	</layout>
</xml>